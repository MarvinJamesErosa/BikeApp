<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomSheet"
    android:src="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <!--image view for displaying course image-->
        <ImageView
            android:id="@+id/idIVCourse"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/streetlocatioon"
            android:src="@drawable/baseline_home_24" />

        <!--text view for displaying course name-->
        <TextView
            android:id="@+id/textlocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="EstablishmentName"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"

            android:textAlignment="center"/>

        <!--text view for displaying course tracks-->
        <TextView
            android:id="@+id/streetlocatioon"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/textlocation"
            android:layout_marginTop="10dp"
            android:text="street"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAlignment="center"/>



        <Button
            android:id="@+id/GoNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVCourse"
            android:layout_margin="10dp"
            android:text="Go Now"
            android:textColor="@color/white"
            android:background="@color/splashscreen"/>

        <Button
            android:id="@+id/Share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GoNow"
            android:layout_margin="10dp"
            android:text="Share"
            android:textColor="@color/splashscreen"
            android:background="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>